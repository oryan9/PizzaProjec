@page
@model RazerPizzeria.Pages.PizzaModel
@{
}
<div class="text-center">
    <div class="main-text">
        <h1 class="display-4 text-capitalize text-black">
            Our secret is in our dough!
        </h1>
        
        <h4>
            REAL PIZZA TASTE, BAKED IN STONE OVEN
        </h4>
        <p class="smallText"><i> Only one pizza per order.</i></p>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png " class="w-100" />
                    </div>
                    <div class="col-8 alig-items-center">
                        <div class="algin-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create own Pizza</h3>
                            <p style="text-align:left;">Make your own pizza with pizza maker!</p>
                            <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza">Try now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImagetTitle + ".png");

                <div class="col-4 mb-5">
                    
                    <a class="pizza-img" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImagetTitle" asp-route-PizzaPrice="@pizza.FinalyPrice">

                        <img src="@imagePath" class="w-100" asp-append-version="true" />
                        
                    </a>
                    <br />
                </div>
            }
            <div>

              


            </div>
        </div>
    </div>
</div>






                    